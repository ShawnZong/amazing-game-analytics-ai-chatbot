{
  "name": "rawg-analytics-app",
  "author": "Junsheng Tan",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "description": "RAWG Analytics app with frontend and mcp server - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:mcp-server": "npm run dev --workspace=mcp-server",
    "dev:worker": "npm run dev --workspace=@rawg-analytics/worker",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:mcp-server": "npm run build --workspace=mcp-server",
    "build:worker": "npm run type-check --workspace=@rawg-analytics/worker",
    "build:all": "npm run build:frontend && npm run build:mcp-server && npm run build:worker",
    "deploy:frontend": "npm run deploy --workspace=frontend",
    "deploy:frontend:production": "npm run deploy:production --workspace=frontend",
    "deploy:frontend:dev": "npm run deploy:dev --workspace=frontend",
    "deploy:mcp-server": "npm run deploy --workspace=mcp-server",
    "deploy:worker": "npm run deploy --workspace=@rawg-analytics/worker -- --env production",
    "deploy:worker:dev": "npm run deploy --workspace=@rawg-analytics/worker -- --env dev",
    "deploy:all": "npm run build:mcp-server && npm run deploy:mcp-server && npm run deploy:worker && npm run deploy:frontend",
    "deploy:all:dev": "npm run build:mcp-server && npm run deploy:mcp-server && npm run deploy:worker:dev && npm run deploy:frontend:dev",
    "start:frontend": "npm run start --workspace=frontend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
