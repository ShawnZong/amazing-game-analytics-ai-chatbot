/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "rawg-analytics-frontend",
	"main": ".open-next/worker.js",
	"compatibility_date": "2025-11-23",
	/**
	 * Compatibility Flags
	 * - nodejs_compat: Enables Node.js compatibility APIs
	 * - global_fetch_strictly_public: Restricts fetch to public endpoints only
	 */
	"compatibility_flags": [
		"nodejs_compat",
		"global_fetch_strictly_public"
	],
	"assets": {
		"binding": "ASSETS",
		"directory": ".open-next/assets"
	},
	"observability": {
		"enabled": true
	},
	/**
	 * Smart Placement
	 * Automatically routes requests to optimal data centers for better performance.
	 * Free feature that reduces latency by running Workers closer to backend services.
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
	"placement": {
		"mode": "smart"
	},
	/**
	 * Environment-specific configurations
	 */
	"env": {
		"dev": {
			"vars": {
				"MCP_SERVER_URL": "http://localhost:8787",
				"DEFAULT_MODEL": "gpt-4.1-mini",
				"MAX_TOKENS": "16000",
				"TEMPERATURE": "1"
			}
		},
		"production": {
			"vars": {
				"MCP_SERVER_URL": "https://rawg-mcp-agent-production.dt9gdsv25p.workers.dev",
				"DEFAULT_MODEL": "gpt-4.1-mini",
				"MAX_TOKENS": "16000",
				"TEMPERATURE": "1"
			}
		}
	}
	/**
	 * Secrets Management
	 * Use secrets to store sensitive data like API keys.
	 * https://developers.cloudflare.com/workers/configuration/secrets/
	 * 
	 * Example: wrangler secret put OPENAI_API_KEY --env production
	 * OPENAI_API_KEY is optional: When provided, switches from mock to real GPT-4
	 */
}


